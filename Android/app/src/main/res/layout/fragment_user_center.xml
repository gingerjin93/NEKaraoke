<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_user_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/user_bg" />

        <ImageView
            android:id="@+id/iv_user_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/account_circle" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_user_portrait"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="65dp"
            android:textColor="@color/color_333333"
            android:textSize="22dp"
            test:text="User" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#06ffffff"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="-20dp"
            android:background="@color/color_f5f8fc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pre_protocol" />

            <TextView
                android:id="@+id/tv_user_agreement"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center_vertical"
                android:text="@string/app_user_agreement"
                android:textColor="@color/color_333333"
                android:textSize="16dp"
                app:drawableEndCompat="@drawable/icon_right_arrow_light" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="-20dp"
            android:background="@color/color_f5f8fc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pre_private" />

            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center_vertical"
                android:text="@string/app_privacy_policy"
                android:textColor="@color/color_333333"
                android:textSize="16dp"
                app:drawableEndCompat="@drawable/icon_right_arrow_light" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="-20dp"
            android:background="@color/color_f5f8fc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pre_info" />

            <TextView
                android:id="@+id/tv_app_about"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center_vertical"
                android:text="@string/app_about"
                android:textColor="@color/color_333333"
                android:textSize="16dp"
                app:drawableEndCompat="@drawable/icon_right_arrow_light" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="-20dp"
            android:background="@color/color_f5f8fc" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="#06ffffff"
            android:gravity="center"
            android:text="@string/app_logout"
            android:textColor="@color/color_e6605c"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nick_name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:textColor="@color/color_333333"
        android:text="v1.0.0"/>

</LinearLayout>